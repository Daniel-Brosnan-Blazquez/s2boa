<rules>
  <rule name="WEEKLY">
    <!-- periodicity is set to 1 week -->
    <periodicity>7</periodicity>
    <!-- window_delay is set to 2 hours -->
    <window_delay>0.083333333</window_delay>
    <!-- window_size is set to 1 week -->
    <window_size>7</window_size>
    <date>
      <time>08:00:00</time>
      <weekday>wednesday</weekday>
    </date>
    <tasks>
      <task name="INGESTION_CONTROL">
        <command>rboa_triggering.py -g "Ingestion control generator (Alerts/Errors view)" -m AUTOMATIC</command>
      </task>
      <task name="REPORTING_CONTROL">
        <command>rboa_triggering.py -g "Reporting control generator (Complete view)" -m AUTOMATIC</command>
      </task>
      <task name="ACQUISITION_COMPLETENESS">
        <command>rboa_triggering.py -g "Acquisition completeness generator (Anomalies/Alerts view)" -m AUTOMATIC</command>
      </task>
      <task name="DATATAKE_COMPLETENESS">
        <command>rboa_triggering.py -g "Datatake completeness generator (Anomalies/Alerts view)" -m AUTOMATIC</command>
      </task>
      <task name="PROCESSING_COMPLETENESS">
        <command>rboa_triggering.py -g "Processing completeness generator (Anomalies/Alerts view)" -m AUTOMATIC</command>
      </task>
      <task name="HKTM_WORKFLOW">
        <command>rboa_triggering.py -g "HKTM workflow status generator (Complete view)" -m AUTOMATIC</command>
      </task>
      <task name="DATA_ARCHIVE_VOLUMES">
        <command>rboa_triggering.py -g "Archive data volumes generator (Complete view)" -m AUTOMATIC</command>
      </task>
    </tasks>
  </rule>
  <rule name="WEEKLY_SENSING">
    <!-- periodicity is set to 1 week -->
    <periodicity>7</periodicity>
    <!-- window_delay is set to 8 hours -->
