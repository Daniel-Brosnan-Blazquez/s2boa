      <time>08:00:00</time>
      <weekday>wednesday</weekday>
    </date>
    <tasks>
      <task name="DHUS_COMPLETENESS">
        <command>rboa_triggering.py -g "Data availability in DHUS generator (Complete view)" -m AUTOMATIC</command>
      </task>
      <task name="SENSING_DATA_VOLUMES">
        <command>rboa_triggering.py -g "Sensing data volumes generator (Complete view)" -m AUTOMATIC</command>
      </task>
    </tasks>
  </rule>
